---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.name }}</title>
    <description>{{ site.description }}</description>
    <link>{{ site.url }}</link>
    <language>{{ site.language }}</language>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>
    {% for post in site.posts limit:10 %}
    <item>
      {% capture post_url %}{{ site.url }}{{ post.url }}{% endcapture %}
      <title>{{ post.title }}</title>
      <description>{{ post.content | replace:'src="/files','src="http://bergie.iki.fi/files' | replace: 'href="/', 'href="http://bergie.iki.fi/' | xml_escape }}</description>
      <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
      <atom:link rel="payment" href="https://flattr.com/submit/auto?url={{ post_url | cgi_escape }}&amp;user_id=bergie" type="text/html" />
      <link>{{ post_url }}</link>
      <guid isPermaLink="true">{{ post_url }}</guid>
      <author>{{ site.author }}</author>
    </item>
  {% endfor %}
</channel>
</rss>
